<%- include('./encabezado')-%>
<body>
    <div class="container mt-3">
        <div class="jumbotron">
            <h1 style="color:blue;">Ingrese datos del producto</h1>
            <br>

            <form action="/productos" method="post">
                
                <div class="form-group">
                    <label for="title"><b>Nombre</b></label>
                    <input id="title" class="form-control" type="text" name="title">
                </div> 

                <div class="form-group">
                    <label for="price"><b>Precio</b></label>
                    <input id="price" class="form-control" type="number" name="price">
                </div>            

                <div class="form-group">
                    <label for="thumbnail"><b>Thumbnail</b></label>
                    <input id="thumbnail" class="form-control" type="text" name="thumbnail">
                </div>

                <button class="btn btn-success mt-3 mb-5">Enviar</button>

            </form>
            <form action="/productos" method="get">
                <button class="btn btn-success mt-3 mb-5">Productos ingresados</button>
            </form>
            


            <h2 style="color:crimson;">Historial</h2>
            <%- include('./tabla')-%>

        </div>
    </div>
</body>

